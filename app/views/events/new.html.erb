<div class="h-100 d-flex flex-column align-items-center">
 <div class="switch w-100 d-flex justify-content-center align-items-center mt-2 mb-4 ">
  <%= link_to "Tasks", create_task_path, class: "switch-btn-inactive me-3", data: { btn: "Add Task" }  %>
  <%= link_to "Events", create_event_path, class: "switch-btn-active", data: { btn: "Add Event" }  %>
</div>
  <h1 class="fw-bold my-5">Add a new Event</h1>

  <%= simple_form_for(@event, html: {class: "d-flex align-items-center flex-column"}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :title,
                  required: true,
                  autofocus: true,
                  input_html: { class: "form-control" }%>
      <%= f.input :content,
                  required: true,
                  autofocus: true,
                  input_html: { class: "form-control" }%>
      <%= f.input :date,
                  required: true,
                  autofocus: true,
                  input_html: { class: "form-control" }%>
      <%= f.input :time,
                  required: true,
                  autofocus: true,
                  input_html: { class: "form-control" }%>
      <%= f.input :location,
                  required: true,
                  autofocus: true,
                  input_html: { class: "form-control" }%>
      <%= f.input :kid,
                  required: true,
                  autofocus: true,
                  input_html: { class: "form-control" }%>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Save", class: "btn btn-primary" %>
    </div>
  <% end %>
