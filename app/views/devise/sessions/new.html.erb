<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", value: "user1@gmail.com" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", value: "1234567890" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-secondary my-1" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
