<div class="h-100 d-flex flex-column align-items-center">
  <h2 class="heading-container mt-3 mb-4 position-relative w-100">
    Add a recurent Task
    <span class="material-symbols-outlined heading-illustration-icons">
      recycling
    </span>
  </h2>

  <div class="border-dotted border-secondary p-4 w-100 max-width-md flex-grow-1 rounded d-flex flex-column align-items-center">
    <% unless @recurent_tasks.empty? %>

      <% @recurent_tasks.each do |task| %>

        <%= link_to competitions_tasks_path(id: task), data: { turbo_method: "post" }, class: "d-flex justify-content-between border w-100 rounded-1 p-3 #{ task == @recurent_tasks.last ? '' : 'mb-3' }" do %>
          <div class="overflow-hidden flex-grow-1 me-2">
            <p class="text-truncate"><%= task.title %></p>
            <p class="fs-7"><strong>for <%= task.kid.name %></strong></p>
          </div>

          <div class="d-flex justify-content-center align-items-center">
            <span class="material-symbols-outlined" style=" font-variation-settings: 'FILL' 0, 'wght' 200;">
              add
            </span>
          </div>
        <% end %>

      <% end %>

    <% else %>
      <p class="fst-italic text-light position-absolute top-50 start-50 translate-middle">No recurent task yet</p>
    <% end %>
  </div>



</div>
