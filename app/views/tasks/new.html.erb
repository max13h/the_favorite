<div class="container">
  <h1 class="fw-bold my-5">Add a new Task</h1>

  <%= simple_form_for(@task, html: {class: "d-flex align-items-center flex-column"}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :title,
                  label: "What's the task ?",
                  required: true,
                  autofocus: true,
                  input_html: { class: "form-control" }%>
      <%= f.input :content,
                  label: "Add some context",
                  autofocus: true,
                  input_html: { class: "form-control" }%>
      <%= f.association :kid,
                        collection: @kids,
                        label: "Who is it for?",
                        include_blank: "Select a kid",
                        required: true,
                        autofocus: true,
                        input_html: { class: "form-control" }%>


      <%= f.simple_fields_for :competitions_tasks do |m| %>
        <%= m.input :deadline,
                    as: :datetime,
                    label: "Optional deadline:",
                    required: false,
                    autofocus: true,
                    html5: true,
                    input_html: { class: "form-control",
                                  min: @current_competition.start_date.strftime('%Y-%m-%dT%H:%M'),
                                  max: @current_competition.end_date.strftime('%Y-%m-%dT%H:%M') } %>

        <%= m.input :competition_id, as: :hidden, input_html: {value: @current_competition.id} %>
      <% end %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Save", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
