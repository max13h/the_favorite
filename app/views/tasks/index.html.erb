<div>
  <h1>Tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= task.title %>
        (<%= task.content %>)
        <div class="task-options">
          <% if task.user_id.nil? %>
            <span class="unassigned-task">Not Assigned</span>
            <%= link_to 'Add To To-Do List', add_to_todo_list_root_path(task), method: :post, class: 'add-to-do-link' %>
            <% else %>
              User <%= task.user_id %> is assigned to this event.
            <% end %>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
