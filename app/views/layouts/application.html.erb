<!DOCTYPE html>
<html>
  <head>
    <title><%= meta_title %></title>
    <meta name="description" content="<%= meta_description %>">

    <!-- Facebook Open Graph data -->
    <meta property="og:title" content="<%= meta_title %>" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="<%= request.original_url %>" />
    <meta property="og:description" content="<%= meta_description %>" />
    <meta property="og:site_name" content="<%= meta_title %>" />
    <meta property="og:image" content="<%= meta_image %>" />

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>

    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,200..300,0..1,0" />
  </head>

  <body class="d-flex flex-column" style="height: 100vh">
    <%= render "shared/header" %>
    <div class="flex-grow-1 overflow-x-hidden overflow-y-scroll d-flex flex-column align-items-center site-content position-relative">
      <%= render "shared/flashes_absolute" %>
      <div class="w-100 h-100 max-width-lg position-relative">
        <%= yield %>
      </div>
    </div>
    <% if browser.device.mobile? %>
      <%= render "shared/navbar" %>
    <% end %>
  </body>
</html>
