<div class="d-flex flex-column justify-content-center align-items-center" style="width: 4rem">
  <p class="fs-5">
    <strong><%= user.first_name %></strong>
  </p>

  <div class="position-relative">
    <% if user == competition.user %>
      <%= image_tag "crown.svg", alt: "user's crown", class: "position-absolute", style: "top: -2px; left: -10px; filter: drop-shadow(1px 1px 0px rgb(0 0 0 / 0.2)); width: 30px;" %>
    <% end %>
    <div class="mt-3">
      <%= render "shared/picture", user: user, size: "3rem", kid_or_parent: "parent" %>
    </div>
  </div>

  <p class="fs-1">
    <% if counter %>
      <strong data-controller="counter" data-counter-target="counter">
        <%= user.scores.where(competition: competition)[0].score %>
      </strong>
    <% else %>
      <strong>
        <%= user.scores.where(competition: competition)[0].score %>
      </strong>
    <% end %>
  </p>
</div>
